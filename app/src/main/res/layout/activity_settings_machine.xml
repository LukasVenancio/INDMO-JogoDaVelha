<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/backgroud"
    tools:context=".SettingsMachineActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/returnArrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/left_arrow"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:fontFamily="@font/pressstart"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:shadowColor="@color/lilas"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="10"
            android:textSize="24sp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_marginTop="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difficulty:"
            android:fontFamily="@font/pressstart"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:shadowColor="@color/lilas"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="10"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_easy"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:background="@drawable/botao"
                android:text="EASY"
                android:fontFamily="@font/pressstart"
                android:textAlignment="center"
                android:textColor="@color/lilas"/>
            <Button
                android:id="@+id/btn_medium"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:background="@drawable/botao"
                android:text="MEDIUM"
                android:fontFamily="@font/pressstart"
                android:textAlignment="center"
                android:textColor="@color/lilas"/>
            <Button
                android:id="@+id/btn_hard"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:background="@drawable/botao"
                android:text="HARD"
                android:fontFamily="@font/pressstart"
                android:textAlignment="center"
                android:textColor="@color/lilas"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginTop="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1 icon:"
            android:fontFamily="@font/pressstart"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:shadowColor="@color/lilas"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="10"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/playerIconX"
                android:layout_width="170dp"
                android:layout_height="90dp"
                android:background="@drawable/botao"
                android:src="@drawable/x"
                android:orientation="vertical"
                android:gravity="center"/>
            <ImageButton
                android:id="@+id/playerIconO"
                android:layout_width="170dp"
                android:layout_height="90dp"
                android:background="@drawable/botao"
                android:src="@drawable/o"
                android:orientation="vertical"
                android:gravity="center"/>

        </LinearLayout>
</LinearLayout>
</LinearLayout>